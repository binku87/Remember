<%= form_for(@stage) do |f| %>
  <% if @stage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stage.errors.count, "error") %> prohibited this stage from being saved:</h2>

      <ul>
      <% @stage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :interval_begin %><br />
    <%= f.text_field :interval_begin %>
  </div>
  <div class="field">
    <%= f.label :interval_end %><br />
    <%= f.text_field :interval_end %>
  </div>
  <div class="field">
    <%= f.label :previous %><br />
    <%= f.select :previous, Stage.all.map { |s| [s.name, s.id] } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Begin</th>
    <th>End</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% Stage.all_stages.each do |stage| %>
    <tr>
      <td><%= stage.name %></td>
      <td><%= to_day(stage.interval_begin) %></td>
      <td><%= to_day(stage.interval_end) %></td>
      <td><%= link_to 'Show', stage %></td>
      <td><%= link_to 'Edit', edit_stage_path(stage) %></td>
    </tr>
  <% end %>
</table>
